@inherits DisplayEmployeeBase
@if (Employee == null)
{
    <div class="spinner"></div>
}
else
{
    
<div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
    <input type="checkbox" checked="@IsSelected" @onchange="CheckBoxChanged" />
    <div class="card-header">
        <h3> @Employee.LastName</h3>
    </div>
    <div class="zoomhinh">
    <img class="card-img-top imageThumbnail" src="@Employee.PhotoPath" />
    </div>
   
    <a  href="@($"employeedetails/{Employee.EmployeeId}")"><h3 style="text-align:center;color:crimson"> @Employee.Gia</h3></a>

    @if (ShowFooter)
    {


<div class="card-footer text-center">

    <a href="@($"employeedetails/{Employee.EmployeeId}")"
       class="btn btn-primary m-1">Xem hàng</a>

    @* <a href="@($"editemployee/{Employee.EmployeeId}")" class="btn btn-primary m-1">Edit</a>

        <a href="#" class="btn btn-danger m-1">Delete</a>*@
</div>
    }
</div>
}
